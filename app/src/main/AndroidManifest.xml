<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".HeadlineApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_hnm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_hnm_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HeadlineNewsMaker"
        tools:targetApi="31">
        <activity
            android:name=".view.preview.PreviewActivity"
            android:exported="false" />
        <activity
            android:name=".view.splash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HeadlineNewsMaker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.main.MainActivity"
            android:exported="true" />
        <activity
            android:name=".view.createnews.CreateNewsActivity"
            android:exported="true" />
        <activity
            android:name=".view.preview.PreviewNewsActivity"
            android:exported="true" />
    </application>

</manifest>